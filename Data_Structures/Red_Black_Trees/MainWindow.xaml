<Window x:Class="Assignment_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualization" Height="410" Width="500" Background="White" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Left" Width="492">
        <Canvas x:Name="canvas" Height="300" Background="white" IsHitTestVisible="True" Margin="40,0,40,5"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="input" Grid.Row="0" Grid.Column="0" Margin="125,0,0,0" Width="75"/>
            <Button x:Name="searchBtn" Content ="Search" Grid.Row="0" Grid.Column="1" Width="50" Margin="25,0,0,0"/>
            <Button x:Name="insertBtn" Content ="Insert" Grid.Row="0" Grid.Column="2" Width="50" Margin="25,0,0,0"/>
            <Button x:Name="bhBtn" Content ="Black Height" Grid.Row="0" Grid.Column="3" Width="80" Margin="25,0,0,0"/>
        </Grid>
    </StackPanel>
</Window>
