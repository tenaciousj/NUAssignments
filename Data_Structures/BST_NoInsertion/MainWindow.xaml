<Window x:Class="Assignment_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualization" Height="410" Width="500" Background="White" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Left" Width="492">
        <Canvas x:Name="canvas" Height="300" Background="white" IsHitTestVisible="True" Margin="40,0,40,5"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="input" Grid.Row="0" Grid.Column="0" Margin="290,0,1,0"/>
            <Button x:Name="searchBtn" Content ="Search" Grid.Row="0" Grid.Column="1" Width="50" Margin="50,0,0,0"/>
            <Button x:Name="minBtn" Content ="Min." Grid.Row="1" Grid.Column="0" Width="50" Margin="290,10,0,0"/>
            <Button x:Name="maxBtn" Content ="Max." Grid.Row="1" Grid.Column="1" Width="50" Margin="50,10,0,0"/>
        </Grid>
    </StackPanel>
</Window>
